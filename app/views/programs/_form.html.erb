<%= simple_form_for @program, :html => { :class => 'form-horizontal' } do |f| %>
  
  <%= f.input :name, :placeholder => 'Name' %>
  <%= f.input :description, :placeholder => 'Enter description', :input_html => { :rows => 4 } %>
  <%= f.association :department, :prompt => 'Choose'%>
  <%= f.input :min_grade, :collection =>1..12, :prompt => 'Choose' %>
  <%= f.input :max_grade, :collection =>1..12, :prompt => 'Choose' %>
  <%= f.input :max_capacity %>
  <%= f.input :start_date, :order => [:month, :day, :year] %>
  <%= f.input :end_date, :order => [:month, :day, :year], :prompt => 'Choose' %>
  <%= f.input :scan_by_absence %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                programs_path, :class => 'btn' %>
  </div>
<% end %>
