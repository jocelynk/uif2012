<%= javascript_include_tag "quick_search" %>

<%- model_class = Student -%>
<div class="row">
  <div class="span10">
<div id="search">
	<%= form_tag('/students/search') do %>
		<strong>Quick Filter:</strong> <%= text_field_tag 'query' -%>
	<% end %>
</div>
</div>
<div class = "span2">
<%= link_to raw("<i class='icon-plus'></i> <strong>Add student</strong>"), new_student_path, :class => 'btn btn-primary' %>
</div>
</div>


<% if @query == 0 %>
  <% unless @visitors.empty? %>
    <%= render :partial => "visitor-normal-table" %>
    <p class="supertiny">&nbsp;</p>
  <% end %>
  <%= render :partial => "normal-table" %>
<% else %>
  <% unless @visitors.empty? %>
    <%= render :partial => "visitor-query-table" %>
    <p class="supertiny">&nbsp;</p>
  <% end %>
  <%= render :partial => "query-table"%>
<% end %>


