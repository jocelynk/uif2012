<% if @absentees.nil? %>
<h2>No Absentees</h2>
<% else %>
<h2>Absentees</h2>
<table id="absentees" class="table table-striped">
  <thead>
    <tr>
      <th><%= Student.human_attribute_name(:name) %></th>
      <th><%= Student.human_attribute_name(:phone_number) %></th>
    </tr>
  </thead>
  <tbody>
    <% @absentees.each do |student| %>
      <tr>
        <td><%= link_to student.name, student_path(student) %></td>
        <td><%= number_to_phone student.cell_phone %></td>     
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
