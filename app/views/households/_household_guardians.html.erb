<div class="well-black-med">
  <div class="well-black-header">
    <p><%= @household.name %> Guardians</p>
  </div>
  
  <% @household.guardians.alphabetical.all.each do |guardian| %>
    <p>
      <%= link_to guardian.proper_name, guardian_path(guardian) %> (<%= guardian.guardian_type %>) -- Phone: <%= number_to_phone guardian.cell_phone %>
    </p>
  <% end %>
  
</div>