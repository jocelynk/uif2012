<h1><%= @household.name %> Houshold</h1>

<p>
  <b>Street:</b>
  <%= @household.street %>
  <% unless @household.street2.blank?  %>
    <br /><%= @household.street2 %>
  <% end %>
</p>

<p>
  <b>City:</b>
  <%= @household.city %>
</p>

<p>
  <b>Zip:</b>
  <%= @household.zip %>
</p>

<p>
  <b>Insurance company:</b>
  <%= @household.insurance_company %>
</p>

<p>
  <b>Insurance number:</b>
  <%= @household.insurance_number %>
</p>

<p>
  <b>Church:</b>
  <%= @household.church %>
</p>


<p>
  <b>Active:</b>
  <%= @household.active ? "Yes" : "No" %>
</p>

<div class="form-actions">
  <%= link_to raw("<i class='icon-backward'></i> Back to households"),
              households_path, :class => 'btn'  %>
  <%= link_to raw("<i class='icon-edit'></i> Edit this household"),
              edit_household_path(@household), :class => 'btn' %>
  <%= link_to raw("<i class='icon-remove'></i> Destroy this household"),
              household_path(@household),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<%= render :partial => "partials/add_notes_to_page", :locals => {:obj => @household} %>

