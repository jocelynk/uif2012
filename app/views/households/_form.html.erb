<%= simple_form_for @household, :html => { :class => 'form-horizontal' } do |f| %>  
  <%= f.input :name %>
  <%= f.input :street %>
  <%= f.input :street2 %>
  <%= f.input :city %>
  <%= f.input :zip %>
  <%= f.input :insurance_company %>
  <%= f.input :insurance_number %>
  <%= f.input :church %>
  <%= f.input :lat %>
  <%= f.input :lon %>
  <%= f.input :active %>
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-success' %>

    <% if @data.blank? %> 
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  households_path, :class => 'btn' %>
    <%else%>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  home_path, :class => 'btn' %>
    <%end%>
  </div> 
<% end %>