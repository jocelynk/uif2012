<div class="well">
  <h2>Add a Note</h2>
  
  <%= form_for([@notable, Note.new], :html => { :class => 'form-horizontal' }) do |f| %>
    <fieldset>
      <div class="control-group">
        <%= f.label :title, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :title %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :contents, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_area :contents, :class => 'text_area', :rows => 4 %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :priority, :class => 'control-label' %>
        <div class="controls">
          <%= f.select :priority, Note::PRIORITIES, :prompt => "Choose ..." %>
        </div>
      </div>
      
      <div class="control-group">
        <div class="controls">
          <%= f.submit nil, :class => 'btn btn-success' %>
        </div>
      </div>

      <!-- <div class="form-actions"> -->
        
        <%# link_to 'Cancel', home_path, :class => 'btn' %>
      <!-- </div> -->
    </fieldset>
  <% end %>
  
</div>





