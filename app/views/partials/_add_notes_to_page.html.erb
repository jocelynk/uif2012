<p>
	<strong><%= obj.notes.size.zero? ? "No notes yet" : pluralize(obj.notes.size, 'note') %> on this <%= "#{obj.class.to_s.downcase}" %></strong><br>
	<% unless @notes.empty? || @notes.nil? %>
		<%= render :partial => "partials/note_list" %>
	<% end %>
	<% if obj.notes.size > 4 %>
	  <%= link_to "More Notes",
                notes_path, :class => 'btn' %>
	<% end %>
</p>
<p>
	<%= render :partial => "partials/note_form" %>
</p>
