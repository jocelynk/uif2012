<%- model_class = Note -%>
<div class="page-header">
  <h1>All Notes</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th width="250">Title</th>
      <th width="275">Details</th>
      <th width="60">Date</th>
      <th width="110">Posted by</th>
      <th width="70">Priority</th>
      <th width="100">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= link_to note.title, note_path(note) %></td>
        <td><%= note.contents %></td>
        <td><%= note.date.strftime("%b %d") %></td>
        <td><%= note.user.proper_name %></td>
        <td>
        <% if note.priority.to_i == 1 %>
          <i class='icon-star-empty'></i> High
        <% elsif note.priority.to_i == 2 %>
          Moderate
        <% else %>
          Normal
        <% end %>
        </td>
        <td>
          <%= link_to raw("<i class='icon-edit'></i> Edit"), edit_note_path(note), :class => 'btn btn-mini' %>
          <%= link_to raw("<i class='icon-remove'></i> Dismiss"),
                      dismiss_note_path(note),
                      :method => :dismiss,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want to dismiss this note?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_note_path,
            :class => 'btn btn-primary' %>
