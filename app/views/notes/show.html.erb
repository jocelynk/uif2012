<% if @note.priority < 3 %>
  <h1>Alert Details</h1>
<% else %>
  <h1>Note Details</h1>
<% end %>


<table>
  <tr>
    <td width="100"><strong>Title:</strong></td><td><%= @note.title %></td>
  </tr>
  <tr>
    <td><strong>Contents:</strong></td><td><%= @note.contents %></td>
  </tr>
  <tr>
    <td><strong>Written by:</strong></td><td><%= @note.user.proper_name %></td>
  </tr>
  <tr>
    <td><strong>Written on:</strong></td><td><%= @note.date.strftime('%B %d, %Y') %></td>
  </tr>
  <tr>
    <td><strong>Priority:</strong></td><td><%= @note.priority_level %></td>
  </tr>
</table>

<!-- <div class="form-actions"> -->
  <% if @note.priority < 3 %>
    <%= link_to raw("<i class='icon-backward'></i> Back to alerts"), alerts_path, :class => 'btn'  %>
  <% else %>
    <%= link_to raw("<i class='icon-backward'></i> Back to notes"), notes_path, :class => 'btn'  %>
  <% end %>
  &nbsp;
  <%= link_to raw("<i class='icon-edit'></i> Edit this note"), edit_note_path(@note), :class => 'btn' %>
  &nbsp;            
  <%= link_to raw("<i class='icon-remove'></i> Destroy this note"),
              note_path(@note),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want to permanently destroy this note?')) },
              :class => 'btn btn-danger' %>
<!-- </div> -->
