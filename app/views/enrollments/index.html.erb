<%- model_class = Enrollment -%>
<div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th><%= model_class.human_attribute_name(:id) %></th>
            <th><%= model_class.human_attribute_name(:student_id) %></th>
            <th><%= model_class.human_attribute_name(:section_id) %></th>
            <th><%= model_class.human_attribute_name(:created_at) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
    </thead>
    <tbody>
        <% @enrollments.each do |enrollment| %>
        <tr>
            <td><%= link_to enrollment.id, enrollment_path(enrollment) %></td>
            <td><%= enrollment.student_id %></td>
            <td><%= enrollment.section_id %></td>
            <td><%=l enrollment.created_at %></td>
            <td>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_enrollment_path(enrollment), :class => 'btn btn-mini' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                enrollment_path(enrollment),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-mini btn-danger' %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<div class="digg_pagination">
    <div clas="page_info">
        <%= page_entries_info @enrollments %>
    </div>
    <%= will_paginate @enrollments, :container => true %>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
new_enrollment_path,
:class => 'btn btn-primary' %>
